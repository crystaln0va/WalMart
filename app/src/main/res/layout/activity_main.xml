<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/walmartLogoImg"
        android:layout_width="212dp"
        android:layout_height="114dp"
        android:layout_gravity="center"
        android:cropToPadding="true"
        app:srcCompat="@drawable/wal" />

    <TextView
        android:id="@+id/signInTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/baloo_bhai_2"
        android:text="Sign into your account"
        android:textColor="#000000"
        android:textSize="34sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="498dp"
        android:background="@drawable/edit_text_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/emailView"
            android:layout_width="254dp"
            android:layout_height="51dp"
            android:gravity="bottom|center"
            android:text="Email address (required)" />

        <EditText
            android:id="@+id/enterEmail"
            android:layout_width="343dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/passView"
            android:layout_width="254dp"
            android:layout_height="36dp"
            android:gravity="bottom|center"
            android:text="Password (required)" />

        <EditText
            android:id="@+id/enterPass"
            android:layout_width="343dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/forgotView"
            android:layout_width="375dp"
            android:layout_height="122dp"
            android:autoLink="all"
            android:clickable="true"
            android:gravity="right|top"
            android:text="Forgot password?"
            android:textColor="#3F51B5" />

        <Button
            android:id="@+id/signInButton"
            android:layout_width="343dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/baloo_bhai_2"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#107DD5" />

        <TextView
            android:id="@+id/dontHaveView"
            android:layout_width="199dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:fontFamily="@font/baloo_bhai_2"
            android:gravity="bottom|center"
            android:includeFontPadding="false"
            android:text="Don't have an account?"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/createAcctButton"
            android:layout_width="343dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/baloo_bhai_2"
            android:text="Create a new account"
            android:textAllCaps="false"
            android:textColor="#107DD5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#B1B1B1" />


    </LinearLayout>
</LinearLayout>